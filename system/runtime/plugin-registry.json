{
  "schemaVersion": "0.5.2",
  "plugins": [
    {
      "id": "dp-analyzer",
      "name": "DP Analysis Plugin",
      "version": "0.5.2",
      "description": "Analyzes Derrick's Plays content for trade ideas",
      "entryPoint": "plugins/dp-analyzer/index.js",
      "commands": [
        {
          "name": "analyze-dp",
          "description": "Analyze Derrick's Plays content",
          "schema": {
            "input": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date of the DP content (defaults to today)"
                },
                "content": {
                  "type": "string",
                  "description": "Raw DP content if not using default source"
                }
              }
            },
            "output": {
              "type": "object",
              "properties": {
                "tradeIdeas": {
                  "type": "array",
                  "items": {
                    "$ref": "intent-trader-runtime-schema.json#/definitions/tradeIdea"
                  }
                },
                "marketFramework": {
                  "$ref": "intent-trader-runtime-schema.json#/definitions/marketFramework"
                }
              }
            }
          }
        }
      ],
      "permissions": ["readContent", "writeTradeIdeas", "writeMarketFramework"],
      "dependencies": [],
      "schemaVersion": "0.5.2"
    },
    {
      "id": "trade-planner",
      "name": "Trade Planning Plugin",
      "version": "0.5.2",
      "description": "Creates and manages trading plans",
      "entryPoint": "plugins/trade-planner/index.js",
      "commands": [
        {
          "name": "create-plan",
          "description": "Create a new trading plan",
          "schema": {
            "input": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date for the plan (defaults to today)"
                }
              }
            },
            "output": {
              "$ref": "intent-trader-runtime-schema.json#/definitions/tradePlan"
            }
          }
        },
        {
          "name": "update-plan",
          "description": "Update an existing trading plan",
          "schema": {
            "input": {
              "type": "object",
              "properties": {
                "planId": {
                  "type": "string",
                  "description": "ID of the plan to update"
                },
                "fields": {
                  "type": "object",
                  "description": "Fields to update using runtime schema format"
                }
              },
              "required": ["planId", "fields"]
            },
            "output": {
              "$ref": "intent-trader-runtime-schema.json#/definitions/tradePlan"
            }
          }
        }
      ],
      "permissions": ["readTradePlans", "writeTradePlans", "readTradeIdeas"],
      "dependencies": [],
      "schemaVersion": "0.5.2"
    },
    {
      "id": "trade-position-manager",
      "name": "Trade Position Manager",
      "version": "0.5.2",
      "description": "Manages trade positions",
      "entryPoint": "plugins/trade-position-manager/index.js",
      "commands": [
        {
          "name": "enter-position",
          "description": "Enter a new trade position",
          "schema": {
            "input": {
              "type": "object",
              "properties": {
                "ideaId": {
                  "type": "string",
                  "description": "ID of the trade idea to enter"
                },
                "entryPrice": {
                  "type": "number",
                  "description": "Entry price"
                },
                "shares": {
                  "type": "number",
                  "description": "Number of shares"
                },
                "contracts": {
                  "type": "number",
                  "description": "Number of contracts"
                }
              },
              "required": ["ideaId", "entryPrice"]
            },
            "output": {
              "$ref": "intent-trader-runtime-schema.json#/definitions/tradePosition"
            }
          }
        }
      ],
      "permissions": ["readTradeIdeas", "writeTradePositions"],
      "dependencies": [],
      "schemaVersion": "0.5.2"
    }
  ],
  "dependencies": {
    "intent-trader-runtime-schema": "0.5.2",
    "runtime-agent": "0.5.2",
    "command-parser": "0.5.2"
  },
  "schemaCompatibility": {
    "masterSchema": "0.5.2",
    "runtimeSchema": "0.5.2"
  },
  "runtimeConstraints": {
    "maxNestingDepth": 3,
    "maxArrayLength": 100,
    "maxResponseSize": 50000
  }
}